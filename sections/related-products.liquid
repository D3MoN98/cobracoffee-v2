<!-- product details slider section start -->
<section class="product-details-slider-sec related-products" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=4">
  <div class="container-fluid">
    <div class="product-details-slider slick-carousel">
      {% assign current_product = product %}

      {{ current_product.tags | json }}
      {% for product in collections.all.products %}
        <div class="product">
          <h2>{{ product.title }}</h2>
          <p>{{ product.description }}</p>
          <p>Price: {{ product.price | money }}</p>
          <!-- Add more product details as needed -->
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- product detail slider section end -->

{% schema %}
  {
    "name": "t:sections.related-products.name",
    "tag": "section",
    "class": "section",
    "settings": []
  }
{% endschema %}