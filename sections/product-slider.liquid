<section class="product-sec">
  <div class="container-fluid">
    <div class="product-slider slick-carousel">
      <div>
        <!-- {%- assign slider_collections = collections[section.settings.slider_collections] -%} -->

        {% for collection in product.collections  %}
          <div class="product-box">
            <!-- <figure><img src="{{ product | img_url: 'master' }}" alt="product-img"></figure> -->
            <div class="pro-btn">
              <i class="fas fa-chevron-up"></i>
              <a href="{{ collection.url }}" class="btn">{{ collection.title }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Slider",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "id": "slider_collections",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Product Slider"
      }
    ]
  }
{% endschema %}