<!-- recent product section start -->
<section class="recent-product">
  <div class="container2">
    <div class="row product-list">
      {% assign current_product = product %}
      {% assign product_limit = 3 %}
      <!-- Set the desired limit for products -->
      {% assign product_count = 0 %}

      {% assign collections_count = collections.all.products | size %}
      {% assign random_collections = '[]' | json %}

      {% for collection in collections.all.products %}
        {% assign random_index = 'random' | random: collections_count %}
        {% assign random_collection = collections[random_index] %}
        {% assign collections_count = collections_count | minus: 1 %}

        {% capture random_collection_json %}
          {{ random_collection }}
        {% endcapture %}

        {% assign random_collections = random_collections | append: random_collection_json | append: "," %}

        {% if collections_count <= 0 %}
          {% break %}
        {% endif %}
      {% endfor %}

      {% assign random_collections = random_collections | strip | replace_last: ',', ']' %}
      {% assign random_collections = random_collections | prepend: '[' %}

      {% for product in random_collections %}
        {% unless current_product.handle == product.handle %}
          {% for tag in product.tags %}
            {% if current_product.tags contains tag %}
              {% if product_count < product_limit %}

                <!-- Display the related product -->
                <div class="col-md-4 item">
                  <div class="product-boxx">
                    <a href="{{ product.url }}" class="f-img">
                      <img
                        class="front"
                        src="{{ product | img_url: 'master' }}"
                        alt="">
                      <img
                        class="back"
                        src="{{ product | img_url: 'master' }}"
                        alt="">
                    </a>
                    <h4>
                      <a href="#">{{ product.title }}</a>
                    </h4>
                    <a
                      class="btn add-to-cart"
                      data-product-id="{{ product.id }}"
                      data-variant-id="{{product.variants[0].id }}">ADD {{ product.price | money }}<i class="fas fa-chevron-right"></i>
                    </a>
                  </div>
                </div>
                {% assign product_count = product_count | plus: 1 %}
              {% endif %}
              {% break %}
            {% endif %}
          {% endfor %}
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>
<!-- recent product section end -->

{% schema %}
  {
    "name": "Recent Product",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Recent Product"
      }
    ]
  }
{% endschema %}