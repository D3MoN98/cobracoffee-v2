<section class="product-sec">
  <div class="container2">
    <div class="product-cat-filter">
      <ul>
        {% for link in linklists.collection-menu.links %}
          <li class="{% if link.current %}active{% endif %}">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    {% assign specific_slug = "apparel" %}
    {% assign current_url = request.url %}

    {% if current_url contains specific_slug %}{% endif %}

    {% assign productsOfType = '' | split: ',' %}

    {% for product in collections.all.products %}
      {% if product.product_type == 'Clothes' %}
        {% capture productInfo %}
          {{ product.title | escape }},{{ product.description | escape }},{{ product.price | money }}
          {% if product.variants.size > 1 %}
            {% for option in product.options %}
              {{ option.name }}:
              {% for value in option.values %}
                {{ value }},
              {% endfor %}
            {% endfor %}
          {% endif %}
        {% endcapture %}
        {% assign productsOfType = productsOfType | push: productInfo %}
      {% endif %}
    {% endfor %}

    {% for productInfo in productsOfType %}
      {% assign productInfoArray = productInfo | split: ',' %}
      <h2>{{ productInfoArray[0] }}</h2>
      <p>{{ productInfoArray[1] }}</p>

      {% if productInfoArray.size > 3 %}
        <h3>Options:</h3>
        <ul>
          {% for i in (3..productInfoArray.size) %}
            <li>{{ productInfoArray[i] }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      <p>Price: {{ productInfoArray[2] }}</p>
      <!-- Add to cart button or other product-specific content here -->
    {% endfor %}



    <div class="product-color-filter">
      <ul>
        <li>
          <div class="c-checkbox color1">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color2">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color3">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
      </ul>
    </div>

    <div class="row product-list">
      {%- for product in collection.products -%}
        <div class="col-md-4 item">
          <div class="product-boxx">
            <a href="{{ product.url }}" class="f-img">
              <img
                class="front"
                src="{{ product | img_url: 'master' }}"
                alt="">
              <img
                class="back"
                src="{{ product | img_url: 'master' }}"
                alt="">
            </a>
            <h4>
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h4>
            <a href="{{ product.url }}" class="btn">ADD {{ product.price | money }}<i class="fas fa-chevron-right"></i>
            </a>
          </div>
        </div>
      {%- endfor -%}

    </div>
  </div>
</section>
{% schema %}
  {
    "name": "t:sections.main-collection-product-grid.name",
    "class": "section",
    "settings": []
  }
{% endschema %}