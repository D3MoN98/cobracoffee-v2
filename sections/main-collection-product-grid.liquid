<section class="product-sec">
  <div class="container2">
    <div class="product-cat-filter">
      <ul>
        <li>
          <a href="/collection/coffee">COFFEE</a>
        </li>
        <li class="active">
          <a href="/collection/apparel">APPAREL</a>
        </li>
        <li>
          <a href="/collection/gear">GEAR</a>
        </li>
      </ul>
    </div>
    <div class="product-color-filter">
      <ul>
        <li>
          <div class="c-checkbox color1">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color2">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color3">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
      </ul>
    </div>
    <div class="row product-list">
      {%- for product in collection.products -%}
        <div class="col-md-4 item">
          <div class="product-boxx">
            <a href="#" class="f-img">
              <img
                class="front"
                src="images/product1-f.webp"
                alt="">
              <img
                class="back"
                src="images/product1-b.webp"
                alt="">
            </a>
            <h4>
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h4>
            <a href="{{ product.url }}" class="btn">ADD {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}<i class="fas fa-chevron-right"></i>
            </a>
          </div>
        </div>
      {%- endfor -%}

    </div>
  </div>
</section>
{% schema %}
  {
    "name": "t:sections.main-collection-product-grid.name",
    "class": "section",
    "settings": []
  }
{% endschema %}