<section class="product-sec">
  <div class="container2">
    <div class="product-cat-filter">
      <ul>
        {% for link in linklists.collection-menu.links %}
          <li class="{% if link.current %}active{% endif %}">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    {% assign specific_slug = "apparel" %}
    {% assign current_url = request.url %}

    {% if current_url contains specific_slug %}{% endif %}
    <div class="color-filter">
      <h3>Filter by Color:</h3>
      <ul>
        {% assign color_options = '' | split: ',' %}
        {% for product in collections.all.products %}
          {% for variant in product.variants %}
            {% for option in variant.options %}
              {{ option | json }}
              {% if option == 'color' %}
                {% assign color_value = variant.option1 %}
                {% if color_value != blank and color_options contains color_value %}
                  {% assign color_options = color_options | push: color_value %}
                {% endif %}
              {% endif %}
            {% endfor %}
          {% endfor %}
        {% endfor %}

        {% for color in color_options %}
          <li>
            <a href="?color={{ color | handleize }}">{{ color }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="product-color-filter">
      <ul>
        <li>
          <div class="c-checkbox color1">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color2">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
        <li>
          <div class="c-checkbox color3">
            <input type="checkbox">
            <label></label>
          </div>
        </li>
      </ul>
    </div>

    <div class="row product-list">
      {%- for product in collection.products -%}
        <div class="col-md-4 item">
          <div class="product-boxx">
            <a href="{{ product.url }}" class="f-img">
              <img
                class="front"
                src="{{ product | img_url: 'master' }}"
                alt="">
              <img
                class="back"
                src="{{ product | img_url: 'master' }}"
                alt="">
            </a>
            <h4>
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h4>
            <a href="{{ product.url }}" class="btn">ADD {{ product.price | money }}<i class="fas fa-chevron-right"></i>
            </a>
          </div>
        </div>
      {%- endfor -%}

    </div>
  </div>
</section>
{% schema %}
  {
    "name": "t:sections.main-collection-product-grid.name",
    "class": "section",
    "settings": []
  }
{% endschema %}