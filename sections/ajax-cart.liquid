<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title fs-5" id="cartModalLabel">YOUR CART [{{ cart.item_count }}]</h1>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="modal"
        aria-label="Close"></button>
    </div>
    <div class="modal-body" id="cartItems">
      {% for item in cart.items %}
        <div class="cart-item">
          <div class="cart-item-img">
            <img src="{{item.featured_image.src}}" alt="{{item.featured_image.alt}}">
          </div>
          <div class="cart-item-details">
            <h6>{{ item.product.title }}
              <a href="#" class="cart-quantity-delete">
                <span>Delete</span>
              </a>
            </h6>
            <p>Quantity: {{ item.quantity }}
              <div class="quantity">
                <a href="#" class="cart-quantity-minus">
                  <span>-</span>
                </a>
                <input
                  name="quantity"
                  type="text"
                  class="cart-quantity-input"
                  value="{{ item.quantity }}">
                <a href="#" class="cart-quantity-plus">
                  <span>+</span>
                </a>
              </div>
            </p>
            <p>Price: {{ item.price | money }}</p>
            <p>SKU: {{ item.sku }}</p>
          </div>
        </div>
        <hr>
      {% endfor %}
    </div>
    <div class="modal-footer">
      <a href="/checkout" class="btn btn-primary d-block">Checkout {{ cart.total_price | money }}</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Cart Items",
    "settings": []
  }
{% endschema %}