{% layout none %}
{% capture cart_details %}
  {% if cart.item_count == 0 %}
    <p>Your cart is empty.</p>
  {% else %}
    <h2>Your Cart</h2>
    <ul>
      {% for item in cart.items %}
        <li>
          {{ item.title }} - Quantity: {{ item.quantity }}
          Price: {{ item.price | money }}
        </li>
      {% endfor %}
    </ul>
    <p>Total: {{ cart.total_price | money }}</p>
  {% endif %}
{% endcapture %}
{{ cart_details | json }}